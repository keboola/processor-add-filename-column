{
    "name": "keboola/processor-add-filename-to-column",
    "license": "MIT",
    "type": "project",	
    "require": {
        "keboola/csv": "^1.1",
        "PHP": "^7.1",
        "symfony/filesystem": "^3.3",
        "symfony/finder": "^3.3",
        "keboola/php-temp": "^0.1",
        "symfony/process": "^3.3",
        "symfony/serializer": "^3.3",
        "symfony/config": "^3.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.1",
        "phpstan/phpstan": "^0.8"
    },

    "autoload": {
        "psr-4": {
            "Keboola\\Processor\\AddFilenameColumn\\": "src/"
        },
        "files": ["src/processFile.php"]
    },
    "scripts": {
        "tests": "php /code/tests/run.php",
        "phpstan": "phpstan analyse --level=max ./src ./tests ./main.php",
        "phpcs": "phpcs --standard=psr2 --ignore=vendor -n .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "allow-plugins": {
            "ocramius/package-versions": true
        }
    }
}
